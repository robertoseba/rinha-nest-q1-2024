{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "@swc/jest"
  },
  "collectCoverage": true,
  "coverageDirectory": "./coverage-e2e",
  "coveragePathIgnorePatterns": [
    "node_modules/",
    "./dist/",
    "./test/",
    "src/main.ts",
    ".module.ts",
    ".constants.ts",
    ".dto.ts",
    ".test.ts",
    ".faker.ts",
    ".mock.ts",
    ".stub.ts",
    ".factory.ts"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!**/tests/**",
    "!src/**/*.constants.**",
    "!src/**/*.dto.**",
    "!src/**/*.entity.**"
  ],
  "clearMocks": true,
  "setupFilesAfterEnv": ["<rootDir>/test/helpers/jest-setup-e2e.ts"]
}
